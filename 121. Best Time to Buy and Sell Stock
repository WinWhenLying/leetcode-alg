https://leetcode.com/problems/best-time-to-buy-and-sell-stock/description/

1 3ms 49.15 O(N)
/* 
 * 记录左边最小值和最大利润
 */

class Solution {
    public int maxProfit(int[] prices) {
    	if(prices.length == 0) {
    		return 0;
    	}
        int leftMin = prices[0];
        int MaxPro = 0;
        for(int i:prices) {
        	leftMin = Math.min(leftMin,i);
        	MaxPro = Math.max(MaxPro, i-leftMin);
        }
        return MaxPro;
    }
}
